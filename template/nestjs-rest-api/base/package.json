{
  "name": "api-starter",
  "version": "1.0.0",
  "author": "Codemask",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build --path tsconfig.build.json",
    "start": "nest start --path tsconfig.json",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "tsc": "node node_modules/typescript/bin/tsc --project tsconfig.build.json",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky install",
    "format": "yarn prettier -w ./src",
    "format:check": "yarn prettier --check ./src",
    "precommit": "yarn tsc && yarn test && yarn code-check",
    "code-check": "yarn prettier -w src && yarn lint --fix && git add .",
    "upd": "yarn upgrade-interactive --latest"
  },
  "dependencies": {
    "@nestjs/common": "10.2.7",
    "@nestjs/config": "3.1.1",
    "@nestjs/core": "10.2.7",
    "@nestjs/platform-express": "10.2.7",
    "@nestjs/terminus": "10.1.1",
    "body-parser": "1.20.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "date-fns": "2.30.0",
    "helmet": "7.0.0",
    "ramda": "0.29.1",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "17.7.2",
    "@commitlint/config-conventional": "17.7.0",
    "@nestjs/cli": "10.1.18",
    "@nestjs/schematics": "10.0.2",
    "@nestjs/testing": "10.2.7",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.92",
    "@types/express": "4.17.18",
    "@types/jest": "29.5.5",
    "@types/node": "20.8.4",
    "@types/ramda": "0.29.6",
    "@types/supertest": "2.0.14",
    "@typescript-eslint/eslint-plugin": "6.7.5",
    "@typescript-eslint/eslint-plugin-tslint": "6.7.5",
    "@typescript-eslint/parser": "6.7.5",
    "eslint": "8.51.0",
    "eslint-config-codemask": "1.1.7",
    "eslint-plugin-functional": "6.0.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-jsdoc": "46.8.2",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-nested-if": "1.0.0",
    "eslint-plugin-no-else": "0.2.2",
    "eslint-plugin-no-loops": "0.3.0",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "prettier": "3.0.3",
    "rimraf": "5.0.5",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "9.5.0",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "testEnvironment": "node"
  }
}
